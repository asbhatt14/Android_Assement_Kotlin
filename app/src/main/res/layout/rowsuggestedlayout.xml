<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_imageSuggest"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_launcher_background"
            android:layout_margin="10dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="0.4"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/txtSuggestedName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user name"
            android:fontFamily="@font/jellee_font"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:maxLines="1"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/txtSchool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="School"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/jellee_font"
            android:textColor="#a8a8a8"
            android:maxLines="1"
            android:textSize="10sp"/>
        <TextView
            android:id="@+id/txtGrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grade"
            android:fontFamily="@font/jellee_font"
            android:layout_marginTop="8dp"
            android:textColor="#a8a8a8"
            android:maxLines="1"
            android:textSize="10sp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="1"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">
            <ImageView
                android:id="@+id/imgPhone"
                android:layout_height="20dp"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:src="@drawable/phone_receiver_1"/>
            <ImageView
                android:id="@+id/imgStar"
                android:layout_height="20dp"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:src="@drawable/star"/>
            <ImageView
                android:id="@+id/imgHeart"
                android:layout_height="20dp"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:src="@drawable/valentines_heart"/>
            <ImageView
                android:id="@+id/imgbubble"
                android:layout_height="20dp"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:src="@drawable/black_bubble_speech"/>
            <ImageView
                android:id="@+id/imgSocial"
                android:layout_height="20dp"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:src="@drawable/social_rss"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_weight="0.3"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center">
        <ImageView
            android:id="@+id/imgDeleteRow"
            android:layout_height="20dp"
            android:layout_width="20dp"
            android:src="@drawable/combined_shape"/>

        <TextView
            android:id="@+id/txtAddNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/round_corner2"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:fontFamily="@font/jellee_font"
            android:text="+ Add"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtAdded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Added!"
            android:textColor="#3ef5de"
            android:padding="5dp"
            android:textSize="15sp"
            android:visibility="gone"
            android:maxLines="1"
            android:fontFamily="@font/jellee_font"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>