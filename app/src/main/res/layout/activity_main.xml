<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Zone"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:textSize="30sp"
        android:fontFamily="@font/baloo_font"/>

    <TextView
        android:id="@+id/txtSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add your friends with their code"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:textColor="#808080"
        android:fontFamily="@font/baloo_font"
        android:textSize="15sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#a8a8a8"
        android:layout_marginTop="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <EditText
            android:id="@+id/edtbox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="35sp"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:maxLength="1"
            android:fontFamily="@font/jellee_font"
            android:background="@drawable/rect_blue"/>
        <EditText
            android:id="@+id/edtbox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="35sp"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:fontFamily="@font/jellee_font"
            android:maxLength="1"
            android:background="@drawable/rectangle_purple"/>
        <EditText
            android:id="@+id/edtbox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="35sp"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:maxLength="1"
            android:fontFamily="@font/jellee_font"
            android:background="@drawable/rectangle_red"/>
        <EditText
            android:id="@+id/edtbox4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="35sp"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:fontFamily="@font/jellee_font"
            android:maxLength="1"
            android:background="@drawable/rectangle_yellow"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp">
        <LinearLayout
            android:id="@+id/lnrAddedView"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:background="#d3d3d3">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/a_1"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:id="@+id/txtSectionAdded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="They added you"
                android:layout_gravity="center"
                android:textColor="#808080"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/jellee_font"
                android:textSize="15sp"/>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewAdded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrSuggestedView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:background="#d3d3d3">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/f_964"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:id="@+id/txtSectionSuggested"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Suggested"
                android:layout_gravity="center"
                android:textColor="#808080"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/jellee_font"
                android:textSize="15sp"/>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewSuggested"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>